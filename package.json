{
  "name": "whatsapp-accounting-ledger-backend",
  "version": "1.0.0",
  "description": "Backend API for WhatsApp Accounting Ledger",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
